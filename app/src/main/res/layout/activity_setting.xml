<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    tools:context=".ui.SettingActivity">

    <include layout="@layout/include_toolbar" />


    <LinearLayout
        android:id="@+id/tvPath"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_setting_item_focus"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:nextFocusDown="@id/tvDelete"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_sdcard" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="存储路径"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:src="@drawable/icon_right" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tvDelete"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_setting_item_focus"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:nextFocusUp="@id/tvPath"
        android:nextFocusDown="@id/tvLog"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPath">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_sdcard" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="删除全部文件"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:src="@drawable/icon_right" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/shape_setting_item_focus"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:nextFocusUp="@id/tvDelete"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDelete">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:src="@drawable/icon_log" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:text="日志"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:src="@drawable/icon_right" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>